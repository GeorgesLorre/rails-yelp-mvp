<div class="container">
  <div class="row">
    <div class="col-md-11"><h1><%= @restaurant.name %></h1> </div>
    <div class="col-md-1">
      <%= link_to 'Edit', edit_restaurant_path(@restaurant) %>
      <%= link_to 'Destroy', restaurant_path(@restaurant), :method => :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %>
    </div>
    <div class="col-md-2"><%= @restaurant.address %></div>
    <div class="col-md-2"><%= @restaurant.phone_number %></div>
    <div class="col-md-2"><%= @restaurant.category %></div>
  </div>
  <br>
  <br>
  <h3>Ratings </h3>
  <%= link_to "add rating", new_restaurant_review_path(@restaurant) %>
  <% @restaurant.reviews.each do |review| %>
  <div class="row">
    <div class="col-md-6"><%= review.content %></div>
    <div class="col-md-3 col-md-offset-3"><%= review.rating %></div>
    <hr>
    <br>
  </div>
  <% end %>
</div>
